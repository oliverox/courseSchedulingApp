<?xml version="1.0" encoding="UTF-8"?>
<solver>
<!-- Define the model -->
    <solutionClass>org.coursescheduling.domain.CourseSchedulingSolution</solutionClass>
    <entityClass>org.coursescheduling.domain.StudentEntity</entityClass>

<!-- Define the score function -->
    <scoreDirectorFactory>
        <scoreDefinitionType>HARD_SOFT</scoreDefinitionType>
        <initializingScoreTrend>ONLY_DOWN</initializingScoreTrend>
        <scoreDrl>org/coursescheduling/solver/courseSchedulingScoreRules.drl</scoreDrl>
    </scoreDirectorFactory>

    <environmentMode>PRODUCTION</environmentMode>

<!-- Configure the optimization algorithm(s) -->
    <termination>
        <secondsSpentLimit>5700</secondsSpentLimit>
        <!-- <bestScoreLimit>0hard/0soft</bestScoreLimit> -->
    </termination>
    <constructionHeuristic>
        <!-- <constructionHeuristicType>CHEAPEST_INSERTION</constructionHeuristicType> -->
        <constructionHeuristicType>FIRST_FIT_DECREASING</constructionHeuristicType>
        <!-- <constructionHeuristicType>ALLOCATE_ENTITY_FROM_QUEUE</constructionHeuristicType> -->
        <!-- <constructionHeuristicType>ALLOCATE_FROM_POOL</constructionHeuristicType> -->
    </constructionHeuristic>
    <localSearch>
        <!-- <unionMoveSelector> -->
            <changeMoveSelector>
                <entitySelector>
                    <cacheType>PHASE</cacheType>
                    <selectionOrder>SORTED</selectionOrder>
                    <sorterComparatorClass>org.coursescheduling.domain.solver.StudentDifficultyComparator</sorterComparatorClass>
                    <sorterOrder>DESCENDING</sorterOrder>
                    <!-- <sorterManner>DECREASING_DIFFICULTY</sorterManner> -->
                    <!-- <filterClass>org.coursescheduling.domain.solver.MovableStudentEntitySelectionFilter</filterClass> -->
                </entitySelector>
            </changeMoveSelector>
            <!-- <swapMoveSelector/> -->
        <!-- </unionMoveSelector> -->

        <!-- <acceptor> -->
            <!-- <simulatedAnnealingStartingTemperature>2hard/10soft</simulatedAnnealingStartingTemperature> -->
        <!-- </acceptor> -->
        <!-- <forager> -->
            <!-- <acceptedCountLimit>1</acceptedCountLimit> -->
        <!-- </forager> -->

        <!-- <acceptor> -->
            <!-- <lateAcceptanceSize>400</lateAcceptanceSize> -->
        <!-- </acceptor> -->
        <!-- <forager> -->
            <!-- <acceptedCountLimit>1</acceptedCountLimit> -->
        <!-- </forager> -->

        <acceptor>
            <entityTabuRatio>0.05</entityTabuRatio>
            <!-- <moveTabuSize>100</moveTabuSize> -->
            <!-- <undoMoveTabuSize>7</undoMoveTabuSize> -->
            <!-- <entityTabuSize>7</entityTabuSize> -->
        </acceptor>
        <forager>
            <acceptedCountLimit>1500</acceptedCountLimit>
        </forager>
    </localSearch>
</solver>
